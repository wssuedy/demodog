<!DOCTYPE html>
<html>
  <head>
    <title>产品</title>
    <link rel='stylesheet' href='/stylesheets/css/product.css' />
  </head>
  <body>

    <%- include('header') %>

    <%- include('nav') %>

    <a href="/product/create">新增产品</a>



    <section>

      <h1>产品</h1>


      <%list.forEach(product=>{%>
        <div class="porduct">
          <h4><a href="/product/<%=product.id%>/read"><%=product.title%></a>  </h4>
          <a href="/product/<%=product.id%>/read">
            <img width="200" height="200" src= "/product/img/<%=product.picture[0]%>" >
          </a>


          <p style="color:red">价格：<%=product.price%> $</p>
          <p style="width:100px; white-space:nowrap; text-overflow:ellipsis; overflow:hidden;">描述：<%=product.description%></p>
          </div>

      <%})%>

    </section>

    <div class="page">
      <ul class="pagination">
        <span>合计<%=count%> </span>
        <li><a href="/product/page/<%=currpage-1>0? currpage-1 : 1%>">«</a> </li>
        <%for(var i=1;i<=count/pageper +1;i++){%>
          <%if(i==currpage){%>
            <li><a href="/product/page/<%=i%>" class="active"><%=i%></a></li>
          <%}else{%>
            <li><a href="/product/page/<%=i%>"><%=i%></a></li>
          <%}%>
        <%}%>

        <li><a href="/product/page/<%=+currpage+1>count/pageper+1? Math.floor(count/pageper+1) : +currpage+1%>">»</a></li>
      </ul>
    </div>


    <script type="text/javascript" src="/javascripts/hidnav.js">

</script>


